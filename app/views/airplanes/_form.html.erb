<%= form_for(@airplane) do |f| %>
  <% if @airplane.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@airplane.errors.count, "error") %> prohibited this airplane from being saved:</h2>

      <ul>
      <% @airplane.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :registration, class: "right inline", title: "N-Number of Airplane", data: {tooltop:true} %></div>
    <div class="small-9 columns"> <%= f.text_field :registration %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :make, class: "right inline" %></div>
    <div class="small-9 columns"> <%= f.text_field :make %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :model, class: "right inline" %></div>
    <div class="small-9 columns"> <%= f.text_field :model %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :model_code, class: "right inline" %></div>
    <div class="small-9 columns"> <%= f.text_field :model_code %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :year, class: "right inline" %></div>
    <div class="small-9 columns"> <%= f.text_field :year %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :serial_no, class: "right inline" %></div>
    <div class="small-9 columns"> <%= f.text_field :serial_no %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :seats, class: "right inline" %></div>
    <div class="small-9 columns"> <%= f.number_field :seats %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns"> <%= f.label :fuel_burn, class: "right inline" %></div>
    <div class="small-9 columns"> <%= f.number_field :fuel_burn %>
	</div>
  </div>
  <div class="row collapse">
    <div class="small-9 small-offset-3 columns"> <%= f.submit class: "button radius" %></div>
  </div>
<% end %>
